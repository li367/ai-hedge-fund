# 交易所API密钥
# OKX交易所
OKX_API_KEY=your_okx_api_key
OKX_SECRET_KEY=your_okx_secret_key
OKX_PASSPHRASE=your_okx_passphrase

# Binance交易所
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key

# 语言模型API配置
# OpenAI
OPENAI_API_KEY=your_openai_api_key

# Anthropic
ANTHROPIC_API_KEY=your_anthropic_api_key

# 通义千问
TONGYI_API_KEY=your_tongyi_api_key

# 模型配置
LLM_PROVIDER=openai  # 可选: openai, anthropic, tongyi, groq
LLM_MODEL=gpt-4  # 根据所选提供商填写对应模型

# 交易参数
RISK_LEVEL=medium  # 风险等级: low, medium, high
MAX_POSITION_SIZE=10000  # 单个仓位最大规模
STOP_LOSS_PERCENTAGE=2  # 止损百分比
TAKE_PROFIT_PERCENTAGE=5  # 止盈百分比

# 日志设置
LOG_LEVEL=INFO  # 日志级别: DEBUG, INFO, WARNING, ERROR, CRITICAL